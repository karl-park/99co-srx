<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enabled False -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border" />
            <solid android:color="@color/text_box_disabled_background_invertible" />
            <stroke android:width="1dp" android:color="@color/red" />
        </shape>
    </item>
    <!--Default-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border" />
            <solid android:color="@color/text_box_background" />
            <stroke android:width="1dp" android:color="@color/red" />
        </shape>
    </item>
</selector>