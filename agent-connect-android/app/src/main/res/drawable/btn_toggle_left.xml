<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white_invertible" />
            <stroke android:color="@color/cyan_light" android:width="@dimen/button_border" />
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/button_radius" android:topRightRadius="0dp" />
        </shape>
    </item>
    <!--selected state-->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/cyan" />
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/button_radius" android:topRightRadius="0dp" />
        </shape>
    </item>
    <!-- normal states -->
    <item>
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:color="@color/cyan" android:width="@dimen/button_border" />
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/button_radius" android:topRightRadius="0dp" />
            <padding android:left="@dimen/btn_padding_horizontal_8" android:right="@dimen/btn_padding_horizontal_8" />
        </shape>
    </item>
</selector>
