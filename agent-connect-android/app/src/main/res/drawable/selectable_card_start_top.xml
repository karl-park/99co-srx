<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- pressed state -->
	<item android:state_pressed="true">
		<inset android:insetRight="-2dp" android:insetBottom="-2dp">
			<shape>
				<solid android:color="@color/white_smoke_invertible" />
				<stroke android:width="@dimen/button_border" android:color="@color/card_border" />
				<corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/card_border_radius" android:topRightRadius="0dp" />
			</shape>
		</inset>
	</item>
	<!-- selected state -->
	<item android:state_selected="true">
		<inset android:insetRight="-2dp" android:insetBottom="-2dp">
			<shape>
				<solid android:color="@color/selected_background" />
				<stroke android:width="@dimen/button_border" android:color="@color/selected" />
				<corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/card_border_radius" android:topRightRadius="0dp" />
			</shape>
		</inset>
	</item>
	<!-- normal states -->
	<item>
		<inset android:insetRight="-2dp" android:insetBottom="-2dp">
			<shape>
				<solid android:color="@color/white_invertible" />
				<stroke android:width="@dimen/button_border" android:color="@color/card_border" />
				<corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/card_border_radius" android:topRightRadius="0dp" />
			</shape>
		</inset>
	</item>
</selector>
