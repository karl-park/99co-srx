<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border_small" />
            <solid android:color="@color/text_box_disabled_background_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border" />
        </shape>
    </item>
    <!-- on Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border_small" />
            <solid android:color="@color/text_box_background_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border_focused" />
        </shape>
    </item>

    <!--Pressed-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border_small" />
            <solid android:color="@color/text_box_background_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border_focused" />
        </shape>
    </item>

    <!--Default-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border_small" />
            <solid android:color="@color/text_box_background_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border" />
        </shape>
    </item>
</selector>