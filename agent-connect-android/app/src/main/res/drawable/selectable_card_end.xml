<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- pressed state -->
	<item android:state_pressed="true">
		<inset android:insetLeft="-2dp">
			<shape>
				<solid android:color="@color/white_smoke_invertible"/>
				<corners
						android:bottomLeftRadius="0dp"
						android:bottomRightRadius="@dimen/card_border_radius"
						android:topLeftRadius="0dp"
						android:topRightRadius="@dimen/card_border_radius"/>
				<stroke android:color="@color/card_border"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
	<!-- selected states -->
	<item android:state_selected="true">
		<inset android:insetLeft="-2dp">
			<shape>
				<solid android:color="@color/selected_background"/>
				<corners
						android:bottomLeftRadius="0dp"
						android:bottomRightRadius="@dimen/card_border_radius"
						android:topLeftRadius="0dp"
						android:topRightRadius="@dimen/card_border_radius"/>
				<stroke android:color="@color/selected"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
	<!-- normal states -->
	<item>
		<inset android:insetLeft="-2dp">
			<shape>
				<solid android:color="@color/white_invertible"/>
				<corners
						android:bottomLeftRadius="0dp"
						android:bottomRightRadius="@dimen/card_border_radius"
						android:topLeftRadius="0dp"
						android:topRightRadius="@dimen/card_border_radius"/>
				<stroke android:color="@color/card_border"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
</selector>
