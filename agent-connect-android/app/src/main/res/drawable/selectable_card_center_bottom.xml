<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- pressed state -->
	<item android:state_pressed="true">
		<inset android:insetLeft="-2dp" android:insetRight="-2dp" android:insetTop="-2dp">
			<shape>
				<solid android:color="@color/white_smoke_invertible"/>
				<stroke android:color="@color/card_border"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
	<!-- selected states -->
	<item android:state_selected="true">
		<inset android:insetLeft="-2dp" android:insetRight="-2dp" android:insetTop="-2dp">
			<shape>
				<solid android:color="@color/selected_background" />
				<stroke android:color="@color/selected"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
	<!-- normal states -->
	<item>
		<inset android:insetLeft="-2dp" android:insetRight="-2dp" android:insetTop="-2dp">
			<shape>
				<solid android:color="@color/white_invertible"/>
				<stroke android:color="@color/card_border"
				        android:width="@dimen/button_border"/>
			</shape>
		</inset>
	</item>
</selector>
