<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Focused-->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border" />
            <solid android:color="@color/light_gray_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border_focused" />
        </shape>
    </item>

    <!--Pressed-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border" />
            <solid android:color="@color/light_gray_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border_focused" />
        </shape>
    </item>

    <!--Default-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/text_input_rounded_border" />
            <solid android:color="@color/light_gray_invertible" />
            <stroke android:width="1dp" android:color="@color/text_box_border" />
        </shape>
    </item>
</selector>