<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/icon_layout_new_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_m">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_new_messages"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_margin="@dimen/badge_layout_padding"
            android:contentDescription="@string/content_description_new_messages"
            android:src="@drawable/ic_menu_chat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_badge"
            style="@style/Badge"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/badge_height"
            android:paddingStart="@dimen/spacing_xxs"
            android:paddingEnd="@dimen/spacing_xxs" />
    </FrameLayout>
</layout>