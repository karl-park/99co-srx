<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="@dimen/spacing_m"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <ImageView
            android:id="@+id/iv_icon"
            android:layout_centerVertical="true"
            android:tint="@color/notification_home_report_title_invertible"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_notification"
            android:contentDescription="@string/content_description_download"
            android:layout_marginEnd="@dimen/spacing_xs"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size" />

    <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_icon"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TextView
                android:id="@+id/tv_title"
                style="@style/SmallBody"
                android:lines="1"
                android:textColor="@color/notification_home_report_title_invertible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_content"
                style="@style/Title"
                android:lines="1"
                android:textColor="@color/notification_home_report_content_invertible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
