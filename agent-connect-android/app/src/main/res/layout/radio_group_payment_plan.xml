<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_single"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:text="@string/label_payment_single" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_instalment"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xl"
            android:button="@null"
            android:drawableTop="?android:attr/listChoiceIndicatorSingle"
            android:text="@string/label_payment_installment" />

    </RadioGroup>
</layout>