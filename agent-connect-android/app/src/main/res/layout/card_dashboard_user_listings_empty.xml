<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_m"
        android:paddingTop="@dimen/spacing_m"
        android:paddingEnd="@dimen/spacing_m"
        android:paddingBottom="@dimen/spacing_l">

        <TextView
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="@string/user_listings_empty_title"
            tools:targetApi="o" />

        <TextView
            style="@style/SubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_m"
            android:text="@string/user_listings_empty_description"
            tools:targetApi="o" />

        <Button
            android:id="@+id/btn_create_listing"
            style="@style/PrimaryButtonWithIcon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_action_plus"
            android:drawablePadding="@dimen/spacing_xs"
            android:text="@string/button_create_listing" />
    </LinearLayout>
</layout>